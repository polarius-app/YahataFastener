            </div>

          </div>




        <% } else { %>
          <div class="dashboard">
            <li class="mt-16 mb-12 font-regular text-l">
              <a href="/dashboard" class="flex items-left justify-left">
                <i class="fi fi-rr-house-chimney text-xl mr-1"></i>
                <span class="ml-2">Dashboard</span>
              </a>
            </li>
          </div>
          <div class="pengaduan mt-10">
            <li class="mb-6 font-regular text-xs text-gray-400">
              <a href="/pengaduan/daftar" class="block text-left">PENGADUAN</a>
            </li>
            <div class="buatpengaduan">
              <li class="font-regular text-l">
                <a href="/pengaduan/daftar" class="flex items-left justify-left">
                  <i class="fi fi-rr-document text-xl mr-1"></i>
                  <span class="ml-2">Pengaduan</span>
                </a>
              </li>
            </div>
          </div>
