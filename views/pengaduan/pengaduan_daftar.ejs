<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    // Fungsi untuk menampilkan modal konfirmasi hapus
    function showDeleteModal(url) {
      const modal = document.getElementById("deleteModal");
      const confirmBtn = document.getElementById("confirmDeleteBtn");
      confirmBtn.setAttribute("href", url);
      modal.classList.remove("hidden");
    }

    // Fungsi untuk menutup modal
    function closeDeleteModal() {
      const modal = document.getElementById("deleteModal");
      modal.classList.add("hidden");
    }
  </script>
</head>
<body class="flex min-h-screen bg-gray-100">
    
  <!-- Left Sidebar -->
  <div class="leftsidebar pr-2">
    <%- include('../partials/leftsidebar') %>
  </div>
    
  <!-- Main Content -->
  <div class="flex-grow p-8">
    <nav class="text-sm text-gray-400 mb-2">
      <a href="/admin/dashboard" class="text-gray-500 hover:text-gray-700">Dashboard</a> /
      <a href="/pengaduan/daftar" class="text-gray-800 font-semibold">Pengaduan</a>
    </nav>
    <h1 class="text-2xl font-bold mb-4"><%= title %></h1>
        
    <a href="/pengaduan/form" class="inline-block mb-4 px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-blue-600">+ Tambah Pengaduan</a>
        
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
        <thead>
          <tr class="bg-gray-200 text-gray-700">
            <th class="border px-4 py-2">ID</th>
            <th class="border px-4 py-2">Nama</th>
            <th class="border px-4 py-2">Departemen</th>
            <th class="border px-4 py-2">Kategori</th>
            <th class="border px-4 py-2">Tanggal Kejadian</th>
            <th class="border px-4 py-2">Waktu Kejadian</th>
            <th class="border px-4 py-2">Kendala Masalah</th>
            <th class="border px-4 py-2">Tanggal Perbaikan</th>
            <th class="border px-4 py-2">Waktu Perbaikan</th>
            <th class="border px-4 py-2">Perbaikan</th>
            <th class="border px-4 py-2">Status</th>
            <th class="border px-4 py-2">Keterangan</th>
            <th class="border px-4 py-2">Periode</th>
            <th class="border px-4 py-2">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% daftar.forEach((item) => { %>
          <tr class="border">
            <td class="border px-4 py-2"><%= item.id_daftar_masalah %></td>
            <td class="border px-4 py-2"><%= item.nama %></td>
            <td class="border px-4 py-2"><%= item.departemen %></td>
            <td class="border px-4 py-2"><%= item.kategori ? item.kategori.nama_kategori : '-' %></td>
            <td class="border px-4 py-2"><%= item.tanggal_kejadian %></td>
            <td class="border px-4 py-2"><%= item.waktu_kejadian %></td>
            <td class="border px-4 py-2"><%= item.kendala_masalah %></td>
            <td class="border px-4 py-2"><%= item.tanggal_perbaikan ? item.tanggal_perbaikan : '-' %></td>
            <td class="border px-4 py-2"><%= item.waktu_perbaikan ? item.waktu_perbaikan : '-' %></td>
            <td class="border px-4 py-2"><%= item.perbaikan ? item.perbaikan : '-' %></td>
            <td class="border px-4 py-2"><%= item.status %></td>
            <td class="border px-4 py-2"><%= item.keterangan ? item.keterangan : '-' %></td>
            <td class="border px-4 py-2"><%= item.periode ? (item.periode.tahun_periode + " - " + item.periode.isp_periode) : '-' %></td>
            <td class="border px-4 py-2">
              <a href="/pengaduan/edit/<%= item.id_daftar_masalah %>" class="text-blue-500 hover:underline">Edit</a> |
              <% if (item.status === 'open') { %>
                <a href="javascript:void(0)" onclick="showDeleteModal('/pengaduan/hapus/<%= item.id_daftar_masalah %>')" class="text-red-500 hover:underline">Hapus</a>
              <% } else { %>
                <span class="text-gray-500">Hapus</span>
              <% } %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <a href="/pengaduan/export" 
      class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
      Export to Excel
    </a>
        
    <a href="/admin/dashboard" class="inline-block mt-4 px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-blue-600">Kembali ke Dashboard</a>
  </div>
    
  <!-- Right Sidebar -->
  <div class="rightsidebar pl-2">
    <%- include('../partials/rightsidebar') %>
  </div>

  <!-- Modal Konfirmasi Hapus -->
  <div id="deleteModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="bg-white rounded-lg shadow-lg p-6 w-80">
      <h2 class="text-xl font-bold mb-4 text-gray-800">Konfirmasi Hapus</h2>
      <p class="mb-6 text-gray-600">Anda yakin ingin menghapus pengaduan ini?</p>
      <div class="flex justify-end space-x-4">
        <button onclick="closeDeleteModal()" class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400">Batal</button>
        <a id="confirmDeleteBtn" href="#" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Hapus</a>
      </div>
    </div>
  </div>
</body>
</html>